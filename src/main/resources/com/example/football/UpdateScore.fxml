<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.football.UpdateScore">
   <children>
      <Button fx:id="Home" layoutX="46.0" layoutY="40.0" mnemonicParsing="false" onAction="#onHomeButtonCLick" text="Home">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Button>
      <Button fx:id="Back" layoutX="49.0" layoutY="432.0" mnemonicParsing="false" onAction="#onBackButtonCLick" style="-fx-background-color: #2B4EF8;" text="Back">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Button>
      <Button fx:id="Logout" layoutX="771.0" layoutY="440.0" mnemonicParsing="false" onAction="#onLogoutButtonCLick" style="-fx-background-color: #FD3623;" text="Logout">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </Button>
      <Label layoutX="217.0" layoutY="112.0" text="Select Match">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Label>
      <ComboBox fx:id="matchSelector" layoutX="380.0" layoutY="107.0" onAction="#onMatchSelectorChange" prefHeight="31.0" prefWidth="161.0" />
      <Label fx:id="team1" layoutX="217.0" layoutY="170.0" prefHeight="26.0" prefWidth="130.0" text="Team 1">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Label>
      <Label fx:id="team2" layoutX="212.0" layoutY="232.0" prefHeight="22.0" prefWidth="154.0" text="Team 2">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Label>
      <TextField fx:id="team1Score" layoutX="377.0" layoutY="168.0" prefHeight="31.0" prefWidth="168.0" />
      <TextField fx:id="team2Score" layoutX="377.0" layoutY="225.0" prefHeight="31.0" prefWidth="168.0" />
      <Button fx:id="update" layoutX="405.0" layoutY="363.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Update">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font></Button>
   </children>
</AnchorPane>
